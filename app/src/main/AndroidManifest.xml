<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PASTIKAN IZIN INI ADA -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Fitur kamera, tidak wajib tapi direkomendasikan -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AbsensiQr"
        tools:targetApi="31">
        <activity
            android:name=".ui.absen.AbsenRekapActivity"
            android:exported="false" />
        <activity
            android:name=".ui.absen.AbsenScanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.akun.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.akun.EditAkunActivity"
            android:exported="false" />
        <activity
            android:name=".ui.izin.IzinActivity"
            android:exported="false" />
        <activity
            android:name=".ui.akun.AkunActivity"
            android:exported="false" />
        <activity
            android:name=".ui.absen.AbsenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.beranda.BerandaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>