<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AbsensiQr" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Warna utama aplikasi (Merah dari konsep Anda) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Varian lebih gelap dari warna utama, untuk status bar -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <!-- Warna teks di atas warna utama (misalnya, teks di tombol merah) -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder, untuk aksen atau komponen interaktif (Kuning/Amber dari konsep Anda) -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <!-- Warna teks di atas warna sekunder -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Warna status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AbsensiQr" parent="Base.Theme.AbsensiQr" />
    <style name="TableHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableCell">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
</resources>