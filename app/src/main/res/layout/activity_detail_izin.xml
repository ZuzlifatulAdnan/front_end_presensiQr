<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.izin.DetailIzinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="DETAIL IZIN"
            android:textColor="?attr/colorPrimary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TableRow>
                    <TextView
                        style="@style/TableCell"
                        android:layout_marginEnd="16dp"
                        android:text="Nama Siswa"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_nama_siswa"
                        style="@style/TableCell"
                        tools:text="Siswa 1" />
                </TableRow>

                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        style="@style/TableCell"
                        android:text="Kelas"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_kelas"
                        style="@style/TableCell"
                        tools:text="XII IPA" />
                </TableRow>

                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        style="@style/TableCell"
                        android:text="Tanggal Izin"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_tanggal_izin"
                        style="@style/TableCell"
                        tools:text="20/07/2025" />
                </TableRow>

                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        style="@style/TableCell"
                        android:text="Alasan"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_alasan"
                        style="@style/TableCell"
                        tools:text="Demam" />
                </TableRow>

                <TableRow android:layout_marginTop="16dp">
                    <TextView
                        style="@style/TableCell"
                        android:layout_gravity="top"
                        android:text="Bukti Surat"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/iv_bukti_surat"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/ic_camera_placeholder" />
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="48dp"
            android:text="Kembali"
            app:backgroundTint="#FFC107"
            app:cornerRadius="24dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#007BFF"
        app:itemIconTint="@color/bottom_nav_custom_selector"
        app:itemTextColor="@color/bottom_nav_custom_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>
