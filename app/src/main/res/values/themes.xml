<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AbsensiQr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Warna utama aplikasi (Merah dari konsep Anda) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Varian lebih gelap dari warna utama, untuk status bar -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <!-- Warna teks di atas warna utama (misalnya, teks di tombol merah) -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder, untuk aksen atau komponen interaktif (Kuning/Amber dari konsep Anda) -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <!-- Warna teks di atas warna sekunder -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Warna status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AbsensiQr" parent="Base.Theme.AbsensiQr" />
</resources>